                {% endif %}
            </div>
            {% endif %}

            {% if footer.right_section %}
                <div class="column-large-3 column-large-offset-1 column-medium-3 column-medium-offset-1 column-small-3 column-small-offset-1">
                    {% if footer.right_section.title %}
                        <div class="footer--column-title">{{ footer.right_section.title }}</div>
                    {% endif %}
                    <div class="footer--column-content text-color--dark-gray">
                        <p>
                            +1 (415) 476-6922 <br />
                            <a href="mailto:placeholder@ucsf.org">placeholder@ucsf.org</a>
                        </p>
                        <p>
                            UCSF Foundation <br />
                            UCSF Box 0248 <br />
                            San Francisco, CA 94143-0248
                        </p>
                        <p>Tax ID# 94-2829914</p>
                    </div>
                    {% if footer.social_links %}
                        <div class="footer--social-links">
                            {% if footer.social_links.facebook %}
                                <div class="footer--social-link-item">
                                    <a href="{{ footer.social_links.facebook }}"><i class="fa fa-facebook-official"></i></a>
                                </div>
                            {% endif %}
                            {% if footer.social_links.twitter %}
                                <div class="footer--social-link-item">
                                    <a href="{{ footer.social_links.twitter }}">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="content-area footer--copyright">
        <div class="column-wrapper">
            <div class="footer--copyright-left footer--copyright-text xsmall--hidden">
                © 2016 University of California San Francisco
            </div>
            <div class="footer--copyright-right">
                <div class="footer--copyright-links">
                    {% if footer.privacy %}
                        <div class="footer--copyright-link-item">
                            <a href="{{ footer.privacy.link }}">{{ footer.privacy.label }}</a>
                        </div>
                    {% endif %}
                    {% if footer.contact %}
                        <div class="footer--copyright-link-item">
                            <a href="{{ footer.contact.link }}">{{ footer.contact.label }}</a>
                        </div>
                    {% endif %}

                    <!-- <div class="footer--copyright-link-item">
                        +1 (415) 476-6922
                    </div> -->
                </div>
            </div>
            {% if footer.copyright %}
                <div class="footer--copyright-left footer--copyright-text xsmall--visible">
                    {{ footer.copyright }}
                </div>
            {% endif %}
        </div>
    </div>
