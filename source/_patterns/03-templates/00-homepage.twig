
<nav class="nav--wrapper transparent">
	<div class="nav-global--wrapper">
		<div class="content-area">
			<div class="nav-global">
				<div class="nav-brand">
					<a href="#">
						<img class="nav-logo" src="{{ header_logos.UCSF_logowhite_small}}" alt="UCSF Logo White Small">
						<span class="nav-title">University of California San Francisco</span>
					</a>
				</div>
				{% if global_header_links %}
					<ul class="nav-link-list">
					{% for item in global_header_links.links %}
