<div class="content-area block block--ways-to-get-involved-list">
	<div class="column-wrapper">
		<div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
			{% block label %}
				<h3 class="text-align--center">{{ list_title }}</h3>
			{% endblock %}
		</div>
	</div>
	{% block items %}
		{% if ways_to_get_involved_items %}
			{% for item in ways_to_get_involved_items %}
			    {% if loop.index is odd %}
					<div class="column-wrapper">
			    {% endif %}
					<div class="column-large-6 column-medium-6 column-small-12 column-xsmall-12">
						{% include '@molecules/02-blocks/17-ways-to-get-involved-item.twig' with {
							"item_image" : item.item_image,
							"item_body" : item.item_body,
							"link_text" : item.link_text,
							"link_href" : item.link_href
						} %}
					</div>
			    {% if (loop.index is even or loop.index == loop.length) %}
					</div>
			    {% endif %}
			{% endfor %}
		{% endif %}
	{% endblock %}
</div>
