<div class="content-area block block--funding-priorities">
    <div class="column-wrapper">
        {% block title %}
            <h3 class="text-align--center">Explore Priorities & Campaigns</h3>
        {% endblock %} 
    </div>
    <div class="column-wrapper slider" id="fundingPrioritiesItems">
        {% block slider %}
            {% for item in funding_priorities.items %}
                {% include "01-molecules/02-blocks/00-funding-priorities-item" with {
                    'classes' : "column-large-3 column-medium-4 column-small-6 column-xsmall-12",
                    'image' : item.image,
                    'link_text' : item.link_text,
                    'link_href' : item.link_href,
                    'content_text' : item.content_text
                 } %}
            {% endfor %}
        {% endblock %}
    </div>
</div>