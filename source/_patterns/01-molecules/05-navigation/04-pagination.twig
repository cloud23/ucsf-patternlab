{% if items %}
  <nav class="pager" role="navigation" aria-labelledby="pagination-heading">
    <h4 id="pagination-heading" class="visually-hidden">{{ 'Pagination' }}</h4>
    <ul class="pager__items js-pager__items">
      {# Print first item if we are not on the first page. #}
      {% if items.first %}
        <li class="pager__item pager__item--first">
          <a href="{{ items.first.href }}" title="{{ 'Go to first page' }}"{{ items.first.attributes }}>
            <span class="visually-hidden">{{ 'First page' }}</span>
            <span aria-hidden="true"><i class="fa fa-angle-double-left"></i> first</span>
          </a>
        </li>
      {% endif %}

      {% if items.previous %}
        <li class="pager__item pager__item--previous">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page' }}" rel="prev"{{ items.previous.attributes }}>
            <span class="visually-hidden">{{ 'Previous page' }}</span>
            <span aria-hidden="true"><i class="fa fa-angle-left"></i> previous</span>
          </a>
        </li>
      {% endif %}

      {% if ellipses.previous %}
        <li class="pager__item pager__item--ellipsis ellipsis-previous" role="presentation">&hellip;</li>
      {% endif %}

      {% for key, item in items.pages %}
        <li class="pager__item{{ current == key ? ' is-active' : '' }}">
          {% if current == key %}
            {% set title = 'Current page' %}
          {% else %}
            {% set title = 'Go to page ' ~ key %}
          {% endif %}
          <a href="{{ item.href }}" title="{{ title }}"{{ item.attributes }}>
            <span class="visually-hidden">
              {{ current == key ? 'Current page' : 'Page' }}
            </span>
            {{- key -}}
          </a>
        </li>
      {% endfor %}

      {% if ellipses.next %}
        <li class="pager__item pager__item--ellipsis ellipsis-next" role="presentation">&hellip;</li>
      {% endif %}

      {% if items.next %}
        <li class="pager__item pager__item--next">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page' }}" rel="next"{{ items.next.attributes }}>
            <span class="visually-hidden">{{ 'Next page' }}</span>
            <span aria-hidden="true">next <i class="fa fa-angle-right"></i></span>
          </a>
        </li>
      {% endif %}

      {% if items.last %}
        <li class="pager__item pager__item--last">
          <a href="{{ items.last.href }}" title="{{ 'Go to last page' }}"{{ items.last.attributes }}>
            <span class="visually-hidden">{{ 'Last page' }}</span>
            <span aria-hidden="true">last <i class="fa fa-angle-double-right"></i></span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}


