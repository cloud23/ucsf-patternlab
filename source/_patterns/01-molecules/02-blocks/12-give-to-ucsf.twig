{% block give_to_ucsf %}
	<div class="block--give-to-ucsf">
		<div class="content-area">
			<div class="column-wrapper">
				<div class="column-large-12 column-medium-12 column-small-12 column-xsmall-12">
					<div class="block--give-to-ucsf-content">
						{% if help_text %}
						<h4>{{ help_text|raw }}</h4>
						{%  endif %}
						{% if button.label %}
						<a href="{{ button.link }} " class="btn btn--with-icon">
					            {{ button.label }} <i class="fa fa-heart"></i>
					    </a>
					    {% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
